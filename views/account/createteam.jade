            input(type='hidden', name='_csrf', value=_csrf)
            input#hiddenTeamName.form-control(type='text',name='teamname' placeholder='Team Name')
            input#hiddenTeamSize.form-control(type='text',name='teamsize' placeholder='Team Name')
          
