block content
  .container
        .row.whos-this-for
          col-md-12.whos-this-for
            h3 Who Is This For
  #TeamBuilder.container
    #TeamNameRow.row
      .col-md-3
        label.teamnamelabel
          | Team Name
        input.teamnameinput.form-control(type='text', placeholder='Add a Team Name')      
    #fields.control-group
      label.teammemberlabel
        | Add Team Members
      p At the current time Gather can only handle teams between 6 and 10 people
      #TeamMemberEntry.form-inline
        .form-group.col-md-2
          input#FirstName.form-control(type='text', placeholder='First Name')
        .form-group.col-md-2
          input#LastName.form-control(type='text', placeholder='Last Name')
        .form-group.col-md-4
          input#Email.form-control(type='text', placeholder='Email')
        button#AddTeamMember.btn.add-more(type='button') + Add Member
      form.form-inline(id='CreateTeamForm', method='POST' action='/createteam')
        #TeamMembersList
