extends ../layoutloggedin

block content
  .container
        .row.whos-this-for
          .col-md-12.whos-this-for
            h3 Order Review
        .container
          .col-md-6
            p=teamname
        .container
          #TeamReviewCol.col-md-6
            h4 Team Members
            .col-md-12
              -for (i=0; i<teammembers.length; i++){
                  .row.teammemberrow
                    .col-md-2.hidden-xs
                      p.btn-circle=teammembers[i].initials
                    .col-xs-8
                      p=teammembers[i].firstname+" "+teammembers[i].lastname
                      p=teammembers[i].email      
                    .col-md-2
                      .switch
                        input.cmn-toggle.cmn-toggle-round-flat(type='checkbox' checked id="cmn-toggle-"+i)
                        |   
                        label(for='cmn-toggle-'+i)
                    hr.teammemberreview
               -}
            button#AddTeamMember.btn.add-more.col-xs-offset-7.col-xs-5(type='button', data-toggle='modal', data-target='.bs-example-modal-sm') + Add Guest

          .col-md-6
            form
              -for (i=0; i<teammembers.length; i++){
                  .row.teammemberrow
                    .col-md-12
                      .form-group.col-md-3
                        input.form-control(type='text', value=teammembers[i].firstname)
                      .form-group.col-md-3
                        input.form-control(type='text', value=teammembers[i].lastname)
                      .form-group.col-md-6
                        input.form-control(type='text', value=teammembers[i].email)
                    hr.teammemberreview
               -}
              h4 Delivery time
              input(type='text')
              h4 Delivery Location
              input(type='text')
              input(type='text')
              input(type='text')
              input(type='text')
              h4 Contact Information
              input(type='text')
              button#SaveTeam.btn.btn-default.col-xs-4.col-xs-offset-3(type='submit') Pay
              
            .modal.fade.bs-example-modal-sm(tabindex='-1', role='dialog', aria-labelledby='mySmallModalLabel')
              .modal-dialog.modal-sm
                .modal-content
                  | Hello

                        
